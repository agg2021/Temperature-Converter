//This is a program that converts the amount of degrees Farenheit introduced into Degrees Celsius
#include <stdio.h>

int main()
{

   //We create the variables that both store the amount of degrees Farenheit and Celsius as floats
   float Fahrenheit, DegreesCelsius;
   
   printf("Introduce el numero de Fahrenheit: ");

  //We store the user's answer in the variable for Farenheit we made
   scanf("%f", &Fahrenheit);
   

   //We convert the value of Farenheit into degrees Celsius
   DegreesCelsius = (Fahrenheit - 32.0) * 5.0 / 9.0;
   
   printf("The num of Fahrenheit introduced is equivalent to: %.2f Â°C", DegreesCelsius);
    return 0;

}
